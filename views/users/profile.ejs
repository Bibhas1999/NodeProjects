<%- include('../components/header.ejs') %>
    <%- include('../components/navbar.ejs') %>
        <div class="container-fluid p-3">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="card shadow-lg rounded-lg">
                            <div class="card-body ">
                                <div class="img-container-main d-flex justify-content-center">
                                    <div class="img-container"
                                        style="height:125px;width:125px;border-radius: 100%;border:2px solid rgb(180, 180, 180);">
                                        <img src="https://linuxhint.com/wp-content/uploads/2021/08/image7-2.png" alt=""
                                            style="height:120px;width:120px;border-radius: 100%;">
                                    </div>
                                </div>
                                <div
                                    class="text-container d-flex flex-column justify-content-center align-items-center py-2">
                                    <h4>
                                        <%= name %>
                                    </h4>
                                    <h5 class="text-muted" style="font-size: medium;">
                                        <%= email %>
                                    </h5>
                                    <p>Mobile No. - +917980003590</p>
                                    <div class="d-flex justify-content-center">
                                        <a href="" class="btn btn-dark m-2 shadow-lg"><i class="fa-brands fa-facebook"
                                                style="font-size:28px;"></i></a>
                                        <a href="" class="btn btn-dark m-2"><i class="fa-brands fa-whatsapp"
                                                style="font-size:28px;"></i></a>
                                        <a href="" class="btn btn-dark m-2"><i class="fa-brands fa-linkedin"
                                                style="font-size:28px;"></i></a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="card shadow-lg rounded-lg px-3">
                            <!-- <div class="card-header bg-dark">
                            <h4 class="text-white">Edit Profile</h4>
                        </div> -->
                            <div class="card-body">
                                <form action="/profile/update" method="post">
                                    <h5 class="">Personal Details</h5>
                                    <hr>
                                    <div class="form-group row py-3">
                                        <div class="col-md-6">
                                            <label for="name" class="form-label text-muted"><b>Username</b></label>
                                            <input class="form-control form-control-md name" id="name" name="name"
                                                type="text" value="<%= name %>" placeholder="Enter Username">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="email" class="form-label text-muted"><b>Email</b></label>
                                            <input type="email" class="form-control form-control-md email" name="email"
                                                readonly type="text" value="<%= email %>" placeholder="Enter Email">
                                        </div>
                                        <div class="col-md-4 mt-2">
                                            <label for="mobile" class="form-label text-muted"><b>Mobile
                                                    No.</b></label>
                                            <input class="form-control form-control-md mobile"
                                                value="<%   if(typeof mobile != 'undefined' && mobile) { %><%=  mobile  %><% } %>"
                                                name="mobile" type="text" placeholder="Enter Mobile No.">
                                        </div>
                                        <div class="col-md-4 mt-2">
                                            <label for="dob" class="form-label text-muted"><b>D.O.B</b></label>
                                            <input type="text" class="form-control form-control-md dob" name="dob"
                                                type="text"
                                                value="<%   if(typeof dob != 'undefined' && dob) { %><%=  dob  %><% } %>"
                                                placeholder="Enter Mobile No.">
                                        </div>

                                        <div class="col-md-4 mt-2">
                                            <label for="gender" class="form-label text-muted"><b>Gender</b></label>
                                            <select class="form-select gender" aria-label="Default select example"
                                                name="gender">
                                                <option selected disabled>Select Gender</option>
                                                <% if(gender=='Male' ) { %>
                                                    <option value="Male" selected>Male</option>
                                                    <% } else {%>
                                                        <option value="Male">Male</option>
                                                        <% } %>
                                                            <% if(gender=='Female' ) { %>
                                                                <option value="Female" selected>Female</option>
                                                                <% } else { %>
                                                                    <option value="Female">Female</option>
                                                                    <% } %>
                                                                        <% if(gender=='Other' ) { %>
                                                                            <option value="Other" selected>Others
                                                                            </option>
                                                                            <% } else {%>
                                                                                <option value="Other">Others</option>
                                                                                <% } %>
                                            </select>
                                        </div>
                                        <div class="col-md-12 mt-2">
                                            <label for="fprofile-img" class="form-label text-muted"><b>Profile
                                                    Picture</b></label>
                                            <input class="form-control" type="file" name="profile-img" id="formFile">
                                        </div>
                                        <div class="col-md-12 mt-2">
                                            <label for="exampleFormControlTextarea1"
                                                class="form-label text-muted"><b>Address</b></label>
                                            <textarea class="form-control" name="address"
                                                id="exampleFormControlTextarea1" rows="3"
                                                placeholder="Enter Full Address" ><%   if(typeof address != 'undefined' && address) { %><%=  address  %><% } %></textarea>
                                        </div>
                                    </div>

                                    <h5 class="mt-3">Additional Details</h5>
                                    <hr>
                                    <div class=" form-group row">
                                        <div class="col-md-6">
                                            <label for="" class="form-label text-muted"><b>Adhaar No.</b></label>
                                            <input type="text" class="form-control form-control-md" name="adhaar_no"
                                                type="text" value="<%   if(typeof adhaar_no != 'undefined' && adhaar_no) { %><%=  adhaar_no  %><% } %>" placeholder="Enter Adhaar No.">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="" class="form-label text-muted"><b>Pan No.</b></label>
                                            <input class="form-control form-control-md" name="pan_no" type="text"
                                                value="<%   if(typeof pan_no != 'undefined' && pan_no) { %><%=  pan_no  %><% } %>" placeholder="Enter PAN No.">
                                        </div>
                                        <div class="col-md-6 mt-2">
                                            <label for="" class="form-label text-muted"><b>Voter No.</b></label>
                                            <input class="form-control form-control-md" name="voter_no" type="text"
                                                value="<%   if(typeof voter_no != 'undefined' && voter_no) { %><%=  voter_no  %><% } %>" placeholder="Enter Voter ID No.">
                                        </div>
                                        <div class="col-md-6 mt-2">
                                            <label for="" class="form-label text-muted"><b>Driving License
                                                    No.</b></label>
                                            <input class="form-control form-control-md" name="div_no" type="text"
                                                value="<%   if(typeof div_no != 'undefined' && div_no) { %><%=  div_no  %><% } %>" placeholder="Enter Driving License No.">
                                        </div>

                                        <div class="col-md-12 mt-4">
                                            <input type="submit" class="btn btn-dark px-5" value="Update">
                                            <input type="reset" class="btn px-5 border">
                                        </div>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="card shadow-lg rounded-lg">
                            <div class="card-body">
                                <h5> <i class="fa fa-cog" style="font-size: 17px;" aria-hidden="true"></i>
                                    General Settings</h5>
                                <hr>
                                <ul class="nav flex-column">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark border-bottom border-top" href="/password/update"><i
                                                class="fa-solid fa-key"></i> Change Password</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark border-bottom" href="#"><i
                                                class="fa-solid fa-at"></i> Change Email ID</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark border-bottom" href="#"><i
                                                class="fa-solid fa-circle-question"></i> Help</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../components/footer.ejs') %>