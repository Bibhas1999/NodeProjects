<%- include('components/header.ejs') %>
    <div class="container-fluid p-3">
        <div class="col-lg-12">
            <div class="row mt-5">
                <div class="col-lg-5 offset-md-4">
                    <div class="card shadow-lg rounded-lg px-3">
                        <!-- <div class="card-header bg-dark">
                            <h4 class="text-white">Edit Profile</h4>
                        </div> -->
                        <div class="card-body">
                            <form action="/reset/password/" method="post">
                                <h5 class="">Reset Password</h5>
                                <hr>
                                <% if(typeof msg !="undefined" && msg) { %>
                                    <p class="text-danger">
                                        <%= msg %>
                                    </p>
                                    <% } %>
                                        <div class="form-group row py-3">
                                            <div class="col-md-12">
                                                <input type="hidden" name="id" value="<%= id %>">
                                                <label for="new_password" class="form-label text-muted"><b>New Password
                                                        <span class="text-danger">*</span></b></label>
                                                <input type="password" class="form-control form-control-md email"
                                                    name="new_password" placeholder="Enter New Password">
                                            </div>
                                            <div class="col-md-12 mt-2">
                                                <label for="new_c_pass" class="form-label text-muted"><b>Confirm New
                                                        Password <span class="text-danger">*</span></b></label>
                                                <input class="form-control form-control-md mobile" name="c_new_password"
                                                    type="password" placeholder="Confirm New Password">
                                            </div>
                                            <div class="col-md-12 mt-4">
                                                <input type="submit" class="btn btn-dark px-5 py-2 w-100" value="Continue">
                                            </div>
                                        </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('components/footer.ejs') %>