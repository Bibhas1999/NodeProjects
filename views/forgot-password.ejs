<%- include('./components/header.ejs') %>

  <div class="flex items-center min-h-screen p-6 bg-gray-50 dark:bg-gray-900">
    <div class="flex-1 h-full max-w-4xl mx-auto overflow-hidden bg-white rounded-lg shadow-xl dark:bg-gray-800">
      <div class="flex flex-col overflow-y-auto md:flex-row">
        <div class="h-32 md:h-auto md:w-1/2">
          <img aria-hidden="true" class="object-cover w-full h-full dark:hidden"
            src="/assets/img/forgot-password-office.jpeg" alt="Office" />
          <img aria-hidden="true" class="hidden object-cover w-full h-full dark:block"
            src="/assets/img/forgot-password-office-dark.jpeg" alt="Office">
        </div>
        <div class="flex items-center justify-center p-6 sm:p-12 md:w-1/2">
          <div class="w-full">
            <h1 class="mb-4 text-xl font-semibold text-gray-700 dark:text-gray-200">
              Forgot password
            </h1>
            <% if(msg !='') { %>
              <div class="p-2 mt-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800"
                role="alert">
                <span class="font-medium"></span>
                <%= msg %>
              </div>
              <% } %>
              <% if(errmsg !='') { %>
                <div class="p-2 mt-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800"
                  role="alert">
                  <span class="font-medium"></span>
                  <%= errmsg %>
                </div>
                <% } %>
            <div class="flex flex-row justify-content-start mt-3">
              <div class="form-check form-check-inline py-2 ">
                <input class="form-check-input" id="email" type="radio" name="radio_btn" value="email" checked>
                <label class="form-check-label" for="email"><b>Email</b></label>
              </div>
              <div class="form-check form-check-inline px-4 py-2">
                <input class="form-check-input" id="sms" type="radio" name="radio_btn" value="sms">
                <label class="form-check-label" for="sms"><b>Mobile</b></label>
              </div>
            </div>
            <p class="text-sm font-semibold" id="txt">Enter the email address associated with your account to get verification code</p>
            <form method="post" action="/forgot/password/" class="mt-4">
              <label class="block text-sm" id="email_div">
                <span class="text-gray-700 dark:text-gray-400">Email</span>
                <input type="email" name="email"
                  class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                  placeholder="Jane Doe" />
              </label>

              <label class="block text-sm hidden" id="mobile_div">
                <span class="text-gray-700 dark:text-gray-400">Mobile</span>
                <input type="tel" name="mobile" class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                  placeholder="XXXXXXXXX56" />
              </label>
  
              <!-- You should use a button here, as the anchor is only used for the example  -->
              <button type="submit" class="block w-full px-4 py-2 mt-4 text-sm font-medium leading-5 text-center text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">
                Verify 
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    var radioBtn = document.getElementsByName('radio_btn');
    var email_div = document.getElementById('email_div');
    var mobile_div = document.getElementById('mobile_div');
    var txt = document.getElementById('txt')

    radioBtn[0].addEventListener('click', () => {
        console.log(radioBtn[0].value)
        mobile_div.classList.add('hidden')
        email_div.classList.remove('hidden')
        txt.innerHTML = "Enter the email address associated with your account to get verification code"
    })
    radioBtn[1].addEventListener('click', () => {
        console.log(radioBtn[1].value)
        email_div.classList.add('hidden')
        mobile_div.classList.remove('hidden')
        txt.innerHTML = "Enter the mobile no. associated with your account to get verification code"
    })
</script>
  <%- include('./components/footer.ejs') %>